{{> header}}
<div class='wrapper'>

	<aside id='sidebar'>
		<div class='h-100'>
			<div class='sidebar-logo'>
				<a href='#'>BackOffice</a>
			</div>

			<ul class='sidebar-nav'>
				<li class='sidebar-header'>
					Acciones del Sistema
				</li>
				<li class='sidebar-item'>
					<a
					href='#'
					class='sidebar-link collapsed'
						data-bs-toggle='collapse'
						data-bs-target='#ordenTrabajo'
						aria-expanded='false'
						aria-controls='ordenTrabajo'
					>
						<i class='fa-regular fa-file-lines pe-2'></i>
						Orden de Trabajo
					</a>
					<ul
						id='ordenTrabajo'
						class='sidebar-dropdown list-unstyled collapse'
						data-bs-parent='#sidebar'
					>
						<li class='sidebar-item'>
							<a 
							href='#'
							 class='sidebar-link'
							 id="cargar-ordenes"
					>	Consultar Nuevas Orden de Trabajo
					</a> <!-- consultar orden de trabajo(buscar)-->
						</li>
					</ul>
				</li>

				<li class='sidebar-item'>
					<a 
					href='#'
					class='sidebar-link collapsed'
					data-bs-toggle='collapse'
						data-bs-target='#muestra'
						aria-expanded='false'
						aria-controls='muestra'
					>
						<i class='fa-solid fa-flask-vial pe-2'></i>
						Carga Registros
					</a>
					<ul
						id='muestra'
						class='sidebar-dropdown list-unstyled collapse'
						data-bs-parent='#sidebar'
					>
						<li class='sidebar-item'>
							<a
							href='#'
							class='sidebar-link'
							id="cargar-muestras-btn"
					>
							Cargar Muestras
							</a> <!-- consultar orden de trabajo(buscar)-->
						</li>
						<li class='sidebar-item'>
							<a href='#'
							class='sidebar-link'
							id="cargar-examen-btn"
					>
							Cargar Examen</a> <!-- consultar orden de trabajo(buscar)-->
						</li>
					</ul>
				</li>

				<li class='sidebar-item'>
					<a
						href='#'
						class='sidebar-link collapsed'
						data-bs-toggle='collapse'
						data-bs-target='#informe'
						aria-expanded='false'
						aria-controls='informe'
					>
						<i class='fa-solid fa-print pe-2'></i>
						Etiqueta
					</a>
					<ul
						id='informe'
						class='sidebar-dropdown list-unstyled collapse'
						data-bs-parent='#sidebar'
					>
						<li class='sidebar-item'>
							<a href='#' class='sidebar-link'>Generar Etiqueta</a>
						</li>
					</ul>
				</li>

				<li class='sidebar-header'>
					Navegador de Soluciones
				</li>
				<li class='sidebar-item'>
					<a
						href='#'
						class='sidebar-link collapsed'
						data-bs-toggle='collapse'
						data-bs-target='#ayuda'
						aria-expanded='false'
						aria-controls='ayuda'
					>
						<i class='fa-solid fa-circle-info pe-2'></i>
						Ayuda y Reporte de Problemas
					</a>
					<ul
						id='ayuda'
						class='sidebar-dropdown list-unstyled collapse'
						data-bs-parent='#sidebar'
					>
						<li class='sidebar-item'>
							<a href='#' class='sidebar-link'>Consultar Ayuda</a>
						</li>
						<li class='sidebar-item'>
							<a href='#' class='sidebar-link'>Reportar Problemas</a>
						</li>
					</ul>
				</li>
			</ul>
		</div>
	</aside>
	<!-- Main Component -->
	<div class='main'>
		<nav class='navbar navbar-expand px-3 border-bottom'>
			<!-- Button for sidebar toggle -->
			<button class='btn' type='button' data-bs-theme='dark'>
				<span class='navbar-toggler-icon'></span>
			</button>
		</nav>
		<main class='content px-3 py-2'>
			<div class='container-fluid'>
				<div class='mb-3'>
					<h3>Bienvenido al Sistema</h3>
				</div>

				<div id="ordenes-table">
					
				</div>

						
				<div class='row'>
					<div class='col-lg-6 offset-md-3'>				
						<form action="/muestra"  method="post"  id="form" class="d-none">
							<h3>Registro de Muestra</h3>
								<div class="mb-3">
    								<label for="idMuestra" class="form-label">ID de Muestra</label>
    								<input type="number" class="form-control" id="idMuestra" name="idMuestra" readonly>
								</div>
								<div class="mb-3">
									<label for="tipoMuestra" class="form-label">Tipo de Muestra</label>
									<input type="text" class="form-control" id="tipo" name="tipo" required>
								</div>
								<div class="mb-3">
									<label for="fechaHoraRecepcion" class="form-label">Fecha y Hora de Recepción</label>
									<input type="datetime-local" class="form-control" id="fechaRecepcion" name="fechaRecepcion" required>
								</div>
								<div class="mb-3">
									<label for="etiqueta" class="form-label">Etiqueta</label>
									<input type="text" class="form-control" id="etiqueta" name="etiqueta" required>
								</div>
								<div class="mb-3">
									<leabel for="idOrdenTrabajo" class="form-label">Orden de Trabajo</label>
									<input type="number" class="form-control" id="idOrdenTrabajo" name="idOrdenTrabajo" required>
								</div>
								<button type="submit" class="mb-3 btn btn-primary" id="guardar">Guardar Muestra</button>
								<button type="button" class="mb-3 btn btn-primary" id="actualizar">Actualizar</button>
						</form>
					</div>
				</div>

				<div id="muestra-table">

				</div>

				<div class='row'>
					<div class='col-lg-6 offset-md-3'>				
						<form action="/muestra"  method="post"  id="form-examen" class="d-none">
							<h3>Registro de Examen</h3>
								<div class="mb-3">
    								<label for="idExamen" class="form-label">ID de Examen</label>
    								<input type="number" class="form-control" id="idExamen" name="idExamen" readonly>
								</div>
								<div class="mb-3">
									<label for="nombre" class="form-label">Nombre</label>
									<input type="text" class="form-control" id="nombre" name="nombre" required>
								</div>
								<div class="mb-3">
									<label for="descripcion" class="form-label">Descripción</label>
									<input type="text" class="form-control" id="descripcion" name="descripcion" required>
								</div>
								<button type="submit" class="mb-3 btn btn-primary" id="guardar-examen">Guardar Examen</button>
						</form>
					</div>
				</div>	
			</div>
		</main>
	</div>
</div>