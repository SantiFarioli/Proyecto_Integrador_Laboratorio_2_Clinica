				<div id='formulario-orden' class='mt-4'>
					<h2>Formulario de Orden de Trabajo</h2>
					<div class='form-group'>
						<label for='fechaCreacion'>Fecha Orden de Trabajo:</label>
						<div class='input-group justify-content-center'>
							<div class='input-group-append'>
								<input
									type='datetime-local'
									class='form-control'
									id='fecha_ord'
									name='fecha_ord'
								/>
							</div>
						</div>

					</div>
					<div class='form-row justify-content-center'>

						<div class='col-md-6 mx-auto'>
							<label for='diagnostico'>Diagnóstico:</label>
							<textarea
								class='form-control'
								id='diagnostico'
								name='diagnostico'
								required
							></textarea>
						</div>

						<div class='col-md-5 mx-auto'>
							<label for='pacienteId'>Datos del Paciente:</label>
							<div class='input-group justify-content-center'>
								<table class='table table-bordered text-center'>
									<tbody>
										<tr>

											<td id='nombreOrden'></td>

											<td id='apellidoOrden'></td>

											<td id='dniOrden'></td>

											<td id='edadOrden'></td>

											<td id='sexoOrden'></td>

											<td id='embarazoOrden'></td>

											<td id='obra_socialOrden'></td>
										</tr>
									</tbody>
								</table>
							</div>
						</div>

					</div>
					<div class='form-group'>
						<label for='medicoId'>Médico Solicitante:</label>
						<div class='input-group justify-content-center'>
							<div class='input-group-append'>
								<button
									type='button'
									class='btn btn-primary'
									id='cargarMedico'
								>Cargar Datos del Médico</button>
							</div>
						</div>
					</div>

					<div class='form-group'>
						<label for='examenId2'>Examen Agregados a Realizar:</label>
						<div class='input-group justify-content-center'>
							<div class='input-group-append'>
								<div class='d-flex flex-column justify-content-center'>
									<table
										class='table table-bordered text-center'
										id='tablaExamenesAgregados'
									>
										<thead>
											<tr>
												<th>ID del Examen</th>
												<th>Codigo</th>
												<th>Descripción</th>
												<th>Requisitos del Examen</th>
												<th>Tiempo del Examen</th>
												<th>Quitar</th>
											</tr>
										</thead>
										<tbody>
											<!-- Aquí se mostrarán los exámenes seleccionados -->
										</tbody>
									</table>

								</div>

							</div>
						</div>
					</div>
					<div class='form-group'>
						<label for='examenId'>Examenes:</label>
						<div class='input-group justify-content-center'>
							<div class='input-group-append'>
								<div class='d-flex flex-column justify-content-center'>
									<table
										class='table table-bordered text-center'
										id='tablaExamenes'
									>
										<thead>
											<tr>
												<th>ID del Examen</th>
												<th>Codigo</th>
												<th>Descripción</th>
												<th>Requisitos del Examen</th>
												<th>Tiempo del Examen</th>
												<th>Agregar</th>
											</tr>
										</thead>
										<tbody>
											<!-- Aquí se mostrarán los exámenes seleccionados -->
										</tbody>
									</table>

								</div>

							</div>
						</div>
					</div>
					<div class='d-flex justify-content-center'>
						<button
							type='submit'
							class='btn btn-success mt-3'
							id='crearOrdenTrabajo'
						>Crear Orden de Trabajo</button>
					</div>
				</div>
			</div>

		</main>
	</div>
